<%- include('partials/header') -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="titleText" class="form-label">Title</label>
        <input type="text" name="postTitle" id="titleText" class="form-control">
        <label for="bodyText">Post</label>
        <textarea name="postText" id="bodyText" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>